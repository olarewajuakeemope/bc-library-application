
<script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://www.gstatic.com/firebasejs/3.7.2/firebase.js"></script>
<script>
  // Initialize Firebase
  var config = {};

   $.getJSON("/javascripts/config.json", function(configJson) {
    config.apiKey = configJson.apiKey;
    config.authDomain = configJson.authDomain;
    config.databaseURL = configJson.databaseURL;
    config.storageBucket = configJson.storageBucket;
    config.messagingSenderId = configJson.messagingSenderId;

  })
  firebase.initializeApp(config);
</script>